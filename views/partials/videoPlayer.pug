mixin videoPlayer(video={})
    .videoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__control
            .videoPlayer__column
                span
                    i.fas.fa-volume-up
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span
                    i.fas.fa-play
            .videoPlayer__column
                span
                    i.fas.fa-expand